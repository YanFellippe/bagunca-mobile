<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#160631"
    app:circularflow_defaultRadius="50sp"
    app:circularflow_radiusInDP="50sp"
    app:layout_constraintCircleRadius="50sp"
    tools:context=".CadastroPage">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Criar uma nova conta"
        android:textColor="@color/cor"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/btCadastro"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#524275"
        android:text="CADASTRAR"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usuario4"
        app:layout_constraintVertical_bias="0.195" />

    <EditText
        android:id="@+id/usuario4"
        android:layout_width="388dp"
        android:layout_height="46dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/campo"
        android:ems="10"
        android:hint="Senha: "
        android:inputType="text"
        app:layout_constraintCircleRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usuario3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Já possui conta? Faça seu login"
        android:textColor="@color/cor"
        android:textColorLink="@color/cor"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btCadastro"
        app:layout_constraintVertical_bias="0.32" />

    <EditText
        android:id="@+id/usuario3"
        android:layout_width="388dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/campo"
        android:ems="10"
        android:hint="E-mail: "
        android:inputType="text"
        app:layout_constraintCircleRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usuario2" />

    <EditText
        android:id="@+id/usuario2"
        android:layout_width="388dp"
        android:layout_height="46dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/campo"
        android:ems="10"
        android:hint="Nome: "
        android:inputType="text"
        app:layout_constraintCircleRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logobg" />

</androidx.constraintlayout.widget.ConstraintLayout>